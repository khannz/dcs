# Example environment variables for python_app
# Copy this file to .env and adjust values as needed

# Number of layers that can be scanned concurrently
# Use the DCS_ prefix: e.g. DCS_CONCURRENCY
DCS_CONCURRENCY=4

# Cache expiration time for scans (in hours)
DCS_CACHE_EXPIRE_HOURS=24

# Number of image scans to keep in cache
DCS_CACHE_NUMBER_CACHED_SCANS=50

# Directory for unpacking and scanning layers
DCS_WORKING_DIR=/tmp

# Disable SSL certificate verification (true/false)
DCS_SSL_INSECURE_ENABLE=false
